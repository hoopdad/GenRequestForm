@model GenReq.Models.GenRequest

@{
    ViewData["Title"] = "Content Generation Request";
}

@section Scripts {
    <script>
        function copyToClipboard() {
            var htmlTxt = "@Html.DisplayFor(model => model.GeneratedContent)";
            var txt = $("<div/>").html(htmlTxt).text();
            navigator.clipboard.writeText(txt);
        }
    </script>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

<h1>Content Generation Request</h1>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CreatedDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CreatedDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Actor)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Actor)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ContentTemplate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ContentTemplate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.GeneratedDate)
    </dt>
