@model GenReq.Models.UserRegistration

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>UserRegistration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Name" type="hidden" />
            <input asp-for="RegistrationStarted" type="hidden" />
            <div class="form-group">
                <label asp-for="RegistrationType" class="control-label"></label>
                <select asp-for="RegistrationType" asp-items="@Html.GetEnumSelectList<RegistrationTypes>()" class="form-control"></select>
                <span asp-validation-for="RegistrationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
